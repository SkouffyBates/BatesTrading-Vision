{
  "name": "bates-tading-vision",
  "private": true,
  "version": "1.2.4",
  "main": "electron/main.js",
  "type": "module",
  "description": "Journal de Trading Professionnel",
  "author": "Trader",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "vite build && electron-builder",
    "electron:build:local": "vite build && electron-builder --publish never",
    "electron:publish": "vite build && electron-builder --publish always",
    "dist": "npm run electron:build:local",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.swingtradepro.app",
    "productName": "BatesTrading Vision",
    "publish": {
      "provider": "github",
      "owner": "SkouffyBates",
      "repo": "BatesTrading-Vision"
    },
    "win": {
      "target": "nsis",
      "icon": "build/SwingTrade-Pro.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/SwingTrade-Pro.icns",
      "category": "public.app-category.finance"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ]
  },
  "dependencies": {
    "better-sqlite3": "^12.4.6",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^39.2.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^16.5.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  }
}